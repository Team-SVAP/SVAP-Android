<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.signup.SignUpActivity">

    <TextView
        android:id="@+id/tv_signup_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:fontFamily="@font/ibm_semibold"
        android:textColor="@color/gray_700"
        android:textSize="16sp"
        android:layout_marginTop="230dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_signup_page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:textColor="@color/gray_700"
        android:text="1/4"
        android:fontFamily="@font/ibm_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_signup_signup"
        app:layout_constraintBottom_toBottomOf="@id/tv_signup_signup"/>
    
    <FrameLayout
        android:id="@+id/fl_signup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_signup"
        app:layout_constraintStart_toStartOf="@id/tv_signup_signup"
        app:layout_constraintEnd_toEndOf="@id/tv_signup_page_count"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>