<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="8dp"/>
                    <stroke
                        android:width="0.5dp"
                        android:color="@color/main_1"/>
                    <solid
                        android:color="@color/gray_100"/>
                </shape>
            </item>

        </layer-list>

    </item>

    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape
                    android:shape="rectangle">
                    <corners
                        android:radius="8dp"/>
                    <solid
                        android:color="@color/gray_100"/>
                </shape>
            </item>
            <item android:drawable="@drawable/down_arrow"
                android:width="16dp" android:height="16dp"
                android:gravity="right|top" android:end="8dp" android:top="12dp"/>
        </layer-list>
    </item>
</selector>